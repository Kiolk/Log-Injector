<idea-plugin>
    <id>com.github.kiolk.loggingplugin</id>
    <name>Logging Plugin</name>
    <vendor email="support@example.com" url="https://github.com/kiolk/LoggingPlugin">Yauheni Slizh</vendor>

    <description><![CDATA[
    Automatically inserts and removes "Myfancy log" statements into methods.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.kotlin</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="LoggingOptions" anchor="right" factoryClass="com.github.kiolk.loggingplugin.toolwindow.LoggingToolWindowFactory" icon="AllIcons.Actions.LogEvents"/>
    </extensions>

    <actions>
        <action id="InsertLogsAction" class="com.github.kiolk.loggingplugin.actions.InsertLogsAction"
                text="Insert Logs" description="Inserts logs into all methods of the current class">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
        <action id="RemoveLogsAction" class="com.github.kiolk.loggingplugin.actions.RemoveLogsAction"
                text="Remove Logs" description="Removes all fancy logs from the current class">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>
