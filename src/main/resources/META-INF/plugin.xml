<idea-plugin>
    <id>com.example.loggingplugin</id>
    <name>Logging Plugin</name>
    <vendor email="support@example.com" url="https://www.example.com">Example</vendor>

    <description><![CDATA[
    Automatically inserts and removes "Myfancy log" statements into methods.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.kotlin</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
    </extensions>

    <actions>
        <action id="InsertLogsAction" class="com.example.loggingplugin.actions.InsertLogsAction"
                text="Insert Logs" description="Inserts logs into all methods of the current class">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
        <action id="RemoveLogsAction" class="com.example.loggingplugin.actions.RemoveLogsAction"
                text="Remove Logs" description="Removes all fancy logs from the current class">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
        <action id="ShowToastAction" class="com.example.loggingplugin.actions.ShowToastAction"
                text="Show Simple Toast" description="Shows a simple toast message">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>
